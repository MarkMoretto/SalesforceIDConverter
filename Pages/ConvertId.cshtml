@page
@model SalesforceIDConverter.Pages.ConverterModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Converter";
}

<h2>Salesforce ID Converter Home</h2> &nbsp;

@if (ViewData["confirmation"] != null) {
    <h3>You entered: ViewData["confirmation"]</h3> 
    <p>Model.SFID</p>
}


<form method="POST">

    <div class="form-group">
        <p>Please enter a 15-character Salesforce ID:</p>
        <div class="col-sm-10">
            <input name="short-id-input" id="main-input" asp-for="SFID" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <input type="submit" class="btn btn-default" value="OK!" />
        </div>
    </div>

</form>

